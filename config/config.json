{
  "language": "zh",
  "sources": {
    "reddit": {
      "enabled": true
    },
    "hackernews": {
      "enabled": true
    },
    "producthunt": {
      "enabled": false,
      "api_key": "${PRODUCTHUNT_TOKEN}"
    },
    "twitter": {
      "enabled": false,
      "auth_token": "${TWITTER_AUTH_TOKEN}",
      "ct0": "${TWITTER_CT0}"
    },
    "github_trending": {
      "enabled": true,
      "languages": ["python", "typescript", "rust", "go"]
    },
    "tavily": {
      "enabled": true,
      "api_key": "${TAVILY_API_KEY}",
      "queries": [
        "latest AI tools launch 2026",
        "new AI models released this week"
      ]
    }
  },
  "summarizer": {
    "enabled": true,
    "provider": "gemini",
    "model": "gemini-3-flash-preview",
    "api_key": "${GEMINI_API_KEY}",
    "temperature": 0.7,
    "max_tokens": 8000
  },
  "channels": {
    "console": {
      "enabled": true
    }
  },
  "advanced": {
    "validation": {
      "enabled": true,
      "auto_fix": true
    },
    "max_retries": 3
  }
}
