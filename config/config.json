{
  "sources": {
    "reddit": {
      "enabled": true
    },
    "hackernews": {
      "enabled": true
    },
    "producthunt": {
      "enabled": true,
      "api_key": "${PRODUCTHUNT_TOKEN}"
    },
    "twitter": {
      "enabled": true,
      "auth_token": "${TWITTER_AUTH_TOKEN}",
      "ct0": "${TWITTER_CT0}"
    },
    "github_trending": {
      "enabled": true,
      "languages": ["python", "typescript", "jupyter-notebook"],
      "keywords": ["kimi", "qianwen", "wenxin", "tongyi", "deepseek", "chatglm"],
      "min_stars": 300
    },
    "brave_search": {
      "enabled": true,
      "api_key": "${BRAVE_API_KEY}",
      "queries": [
        "Kimi 通义千问 文心一言 国产大模型 2026",
        "DeepSeek 字节跳动 腾讯AI 阿里AI 百度AI",
        "智谱AI 华为盘古 中文大模型 国内首发",
        "OpenAI ChatGPT Claude new features 2026",
        "Gemini Anthropic AI tools productivity"
      ],
      "freshness": "pd",
      "count": 5
    }
  },
  "summarizer": {
    "enabled": true,
    "provider": "gemini",
    "model": "gemini-2.5-flash",
    "api_key": "${GEMINI_API_KEY}",
    "temperature": 0.7,
    "max_tokens": 8000
  },
  "channels": {
    "console": {
      "enabled": true
    }
  },
  "advanced": {
    "validation": {
      "enabled": true,
      "auto_fix": true
    },
    "max_retries": 3
  }
}
